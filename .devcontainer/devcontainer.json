{
	"image": "mcr.microsoft.com/devcontainers/base:noble",
	"features": {
		"ghcr.io/devcontainers/features/common-utils": {
			"installZsh": true,
			"configureZshAsDefaultShell": true,
			"username": "vscode",
			"userUid": 1000,
			"userGid": 1000
		}
	},
	"postCreateCommand": "zsh -c 'compaudit'",
	"customizations": {
		"codespaces": {
			"openFiles": [
				"README.md"
			]
		}
	}
}
